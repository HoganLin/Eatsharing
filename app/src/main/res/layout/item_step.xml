<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="138pt"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5pt">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:text="第"/>

            <TextView
                android:id="@+id/step_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:text="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:text="步"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/step_image"
            android:layout_width="138pt"
            android:layout_height="103pt"
            android:layout_marginTop="2pt"
            android:src="@drawable/step_holder"
            android:scaleType="fitXY"/>

        <EditText
            android:layout_marginTop="2pt"
            android:id="@+id/step_edit"
            android:layout_width="130pt"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="这里输入步骤说明"/>

    </LinearLayout>

</RelativeLayout>