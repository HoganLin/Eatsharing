    <!-- 描边，边框宽度、颜色 -->
    <stroke android:width="1dp" android:color="#222222" />

    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"
        />

</shape>